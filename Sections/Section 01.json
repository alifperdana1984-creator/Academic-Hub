    {
      "id": "1.5",
      "title": "Conflict of Interest Policy",
      "content": [
        {
          "type": "policy",
          "purpose": "Identify, disclose, and manage conflicts of interest that may compromise decision-making integrity.",
          "scope": "Board members, Eduversal leadership, GMs, Principals, and SLT members.",
          "examples": [
            "Financial interest in a vendor",
            "Family member employed by network",
            "Position in competing institution",
            "Gifts beyond nominal value"
          ],
          "steps": [
            {
              "n": 1,
              "title": "Disclosure",
              "desc": "Declare conflict in writing to Chair or CAO"
            },
            {
              "n": 2,
              "title": "Review",
              "desc": "Assess materiality and recommend approach"
            },
            {
              "n": 3,
              "title": "Management",
              "desc": "Options: Recusal, Divestment, Monitoring, or Prohibition"
            },
            {
              "n": 4,
              "title": "Documentation",
              "desc": "Record in Conflict of Interest Register"
            }
          ]
        }
      ]
    },
    {
      "id": "1.6",
      "title": "Board Self-Evaluation",
      "content": [
        {
          "type": "process",
          "title": "Annual Board Self-Evaluation",
          "purpose": "Assess Board effectiveness and enhance governance capacity.",
          "steps": [
            {
              "n": 1,
              "title": "Survey",
              "desc": "Anonymous self-evaluation covering strategic oversight, financial stewardship, policy development"
            },
            {
              "n": 2,
              "title": "Analysis",
              "desc": "Chair and Secretary compile results"
            },
            {
              "n": 3,
              "title": "Feedback",
              "desc": "Collect input from GM and Principals"
            },
            {
              "n": 4,
              "title": "Reflection",
              "desc": "Board meeting to discuss findings"
            },
            {
              "n": 5,
              "title": "Action Plan",
              "desc": "Commit to 2-3 priority improvements"
            },
            { "n": 6, "title": "Review", "desc": "Mid-year progress check" }
          ]
        }
      ]
    },

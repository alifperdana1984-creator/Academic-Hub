    {
      "id": "20.9",
      "title": "Reference Update Protocol",
      "content": [
        {
          "type": "process",
          "title": "Annual Review Cycle",
          "steps": [
            "Review all Indonesian regulations for updates published during the previous year",
            "Verify Cambridge Handbook updates and incorporate changes",
            "Update CIS/WASC framework references if new versions are released",
            "Check all hyperlinks for accessibility"
          ]
        },
        {
          "type": "process",
          "title": "Mid-Year Review",
          "steps": [
            "Monitor for mid-year regulatory changes (particularly Ministry circulars)",
            "Update Cambridge exam timeline references",
            "Review EAL/SEN resources for new publications"
          ]
        },
        {
          "type": "process",
          "title": "Ongoing Monitoring",
          "steps": [
            "Subscribe to JDIH Kemendikbud notification system",
            "Monitor Cambridge Support Hub announcements",
            "Track CIS/WASC communications to member schools"
          ]
        }
      ]
    },
